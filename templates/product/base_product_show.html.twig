{% extends 'base.html.twig' %}

{% block title %}{{ product.title }}{% endblock %}

{% block body %}
    <main>
        <h1>{{ product.title }}</h1>

        {% include 'product/_gallery.html.twig' with { 'images': product.imagePaths } %}
        <div class="content">


        <div class="detail-card">
            <span class="label">Description</span>
            <span class="value">{{ product.description }}</span>
        </div>

        <div class="details-grid">
            <div class="detail-card">
                <span class="label">Contact</span>
                <span class="value">{{ product.user.email }}</span>
            </div>

            <div class="detail-card">
                <span class="label">Published</span>
                <span class="value">{{ product.publishDate ? product.publishDate|date('Y-m-d') : 'Not published' }}</span>
            </div>

            <div class="detail-card">
                <span class="label">Price</span>
                <span class="value">{{ product.price }} â‚¬</span>
            </div>
        </div>
        <div class="details-grid">
            {% block extra_details %}{% endblock %}
        </div>

        </div>

        <div class="bottom-buttons">
            {% if product.user == app.user %}
                <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="blue-btn">edit</a>
            {% endif %}
            <a href="#" onclick="window.history.back(); return false;">back</a>
        </div>
    </main>
{% endblock %}

{% block stylesheets %}
    <style>
        .bottom-buttons {
            display: flex;
            flex-direction: column;
            gap: 8px;
            align-items: center;
            justify-content: center;
            margin-top: auto;
            width: 100%;
            max-width: 320px;
            margin-left: auto;
            margin-right: auto;
        }

        .content{
            margin-top: 32px;
        }
    </style>
{% endblock %}
