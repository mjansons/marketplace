{% extends 'base.html.twig' %}

{% block title %}Phone index{% endblock %}

{% block body %}
    <h1>Phone index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Memory</th>
                <th>ProductCondition</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for phone in phones %}
            <tr>
                <td>
                    {% if phone.imagePaths is not empty %}
                        <img src="{{ asset('uploads/products/' ~ phone.imagePaths|first) }}" alt="Phone Thumbnail" width="50" height="50">
                    {% else %}
                        No Image
                    {% endif %}
                </td>
                <td>{{ phone.id }}</td>
                <td>{{ phone.brand }}</td>
                <td>{{ phone.model }}</td>
                <td>{{ phone.memory }}</td>
                <td>{{ phone.productCondition }}</td>
                <td>
                    <a href="{{ path('app_phone_show', {'id': phone.id}) }}">show</a>
                    <a href="{{ path('app_phone_edit', {'id': phone.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if app.user %}
    <a href="{{ path('app_phone_new') }}">Create new</a>
    {% endif %}
{% endblock %}
