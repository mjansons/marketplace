{% extends 'product/base_product_show.html.twig' %}

{% block extra_details %}
    <div class="detail-card">
        <span class="label">Brand</span>
        <span class="value">{{ product.brand }}</span>
    </div>

    <div class="detail-card">
        <span class="label">Model</span>
        <span class="value">{{ product.model }}</span>
    </div>

    <div class="detail-card">
        <span class="label">Year</span>
        <span class="value">{{ product.year }}</span>
    </div>

    <div class="detail-card">
        <span class="label">Volume</span>
        <span class="value">{{ product.volume }}</span>
    </div>

    <div class="detail-card">
        <span class="label">Run (km)</span>
        <span class="value">{{ product.run }}</span>
    </div>

{% endblock %}
